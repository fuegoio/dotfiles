
# wm independent hotkeys
#

XF86MonBrightnessUp
    light -A 5

XF86MonBrightnessDown
    light -U 5

XF86AudioMute
    amixer set Master toggle

XF86Audio{Raise,Lower}Volume
    amixer set Master {5%+,5%-} unmute

XF86Audio{Play,Pause,Next,Prev}
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.{PlayPause,Stop,Next,Previous}

# terminal emulator
super + Return
   alacritty

# program launcher
super + space
    ~/.core/appsmenu

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# program shortcuts
#
super + e ; {e,m,p,c,g,k,i}
	{pcmanfm,spotify,pycharm,chromium,gitkraken,keepassxc,insomnia}

super + i
    ~/.core/lock

super + ctrl + s
    ~/.core/screens

super + c
    flameshot gui

ctrl + .
    splatmoji copy
    
#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

#
# state/flags
#

# set the window state
super + {y,p,shift + f,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {a,o,e}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop
super + {a,u}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last
 
# focus to the given desktop
super + {_,alt + }{g,t,n,s}
	bspc {desktop -f,node -d} '{term,web,code,chrome}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + c
	bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + ctrl + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + shift + {a,e,o,u}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# light control
#
ctrl + {XF86MonBrightnessUp,XF86MonBrightnessDown}
    /home/fuego/Projects/Tech/nanoleafs/venv/bin/python /home/fuego/Projects/Tech/nanoleafs/main.py brightness {increase,decrease}

super + alt + ctrl + shift + {period,e}
    /home/fuego/Projects/Tech/nanoleafs/venv/bin/python /home/fuego/Projects/Tech/nanoleafs/main.py brightness {increase,decrease}

super + alt + ctrl + shift + {p,w}
    /home/fuego/Projects/Tech/nanoleafs/venv/bin/python /home/fuego/Projects/Tech/nanoleafs/main.py color {primary,white}

